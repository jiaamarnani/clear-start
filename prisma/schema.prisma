// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            String   @id @default(cuid())
  name          String
  brand         String
  priceRange    String   // e.g., "$", "$$", "$$$"
  skinTypes     String[] // array: ["oily", "dry", "combo", "sensitive"]
  concerns      String[] // ["acne", "texture", "hyperpigmentation"]
  acneTypes     String[] // ["comedonal", "cystic", "inflammatory"]
  ingredients   String[] // key ingredients
  productType   String   // "cleanser", "treatment", "moisturizer", "sunscreen"
  amUse         Boolean @default(false)
  pmUse         Boolean @default(false)
  imageUrl      String?
  purchaseLink  String?
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}